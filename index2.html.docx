<style>
body {
  margin: 0;
  background: radial-gradient(circle at center, #0f0f0f, #000);
  font-family: 'Arial', sans-serif;
  color: white;
  text-align: center;
  overflow: hidden;
}
h1 {
  margin: 10px 0;
  font-size: 32px;
  text-shadow: 0 0 8px #0ff;
}
canvas {
  display: block;
  margin: 0 auto;
  background: black;
  border: 2px solid #0ff;
  box-shadow: 0 0 20px #0ff;
}
button {
  margin: 5px;
  padding: 10px 16px;
  font-size: 16px;
  border-radius: 8px;
  cursor: pointer;
  border: none;
  background: #0ff;
  color: #111;
  font-weight: bold;
  box-shadow: 0 0 10px #0ff;
}
#scoreboard {
  font-size: 18px;
  margin-top: 10px;
  text-shadow: 0 0 6px #0ff;
}
#menu, #gameOverScreen {
  position: absolute;
  top: 50%; left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(20,20,20,0.9);
  border: 2px solid #0ff;
  padding: 20px;
  display: none;
  box-shadow: 0 0 20px #0ff;
}
#menu h2, #gameOverScreen h2 {
  margin-bottom: 10px;
  text-shadow: 0 0 8px #0ff;
}
</style>
</head>
